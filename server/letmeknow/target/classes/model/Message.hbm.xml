<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.Message" table="message" schema="letmeknow_test">
        <id name="messageId">
            <column name="message_id" sql-type="int(11)"/>
        </id>
        <property name="content">
            <column name="content" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="createdAt">
            <column name="created_at" sql-type="timestamp" not-null="true"/>
        </property>
        <property name="updatedAt">
            <column name="updated_at" sql-type="timestamp" not-null="true"/>
        </property>
        <property name="deletedAt">
            <column name="deleted_at" sql-type="timestamp" not-null="true"/>
        </property>
        <property name="senderId">
            <column name="sender_id" sql-type="int(11)"/>
        </property>
        <property name="receiverId">
            <column name="receiver_id" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>