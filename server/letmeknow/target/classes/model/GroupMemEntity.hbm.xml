<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.GroupMemEntity" table="group_mem" schema="letmeknow_test">
        <composite-id mapped="true" class="model.GroupMemEntityPK">
            <key-property name="groupId">
                <column name="group_id" sql-type="int(11)"/>
            </key-property>
            <key-property name="userId">
                <column name="user_id" sql-type="int(11)"/>
            </key-property>
        </composite-id>
        <property name="role">
            <column name="role" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="createdAt">
            <column name="created_at" sql-type="timestamp" not-null="true"/>
        </property>
        <property name="updatedAt">
            <column name="updated_at" sql-type="timestamp" not-null="true"/>
        </property>
        <property name="deletedAt">
            <column name="deleted_at" sql-type="timestamp" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>