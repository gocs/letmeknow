<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.Groups" table="groups" schema="letmeknow_test">
        <id name="groupId">
            <column name="group_id" sql-type="int(11)"/>
        </id>
        <property name="groupName">
            <column name="group_name" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="capacity">
            <column name="capacity" sql-type="int(11)"/>
        </property>
        <property name="status">
            <column name="status" sql-type="int(11)"/>
        </property>
        <property name="icon">
            <column name="icon" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="createdAt">
            <column name="created_at" sql-type="timestamp"/>
        </property>
        <property name="updatedAt">
            <column name="updated_at" sql-type="timestamp"/>
        </property>
        <property name="deletedAt">
            <column name="deleted_at" sql-type="timestamp"/>
        </property>
        <property name="category">
            <column name="category" sql-type="int(11)"/>
        </property>
        <property name="introduction">
            <column name="introduction" sql-type="varchar(255)"/>
        </property>
    </class>
</hibernate-mapping>