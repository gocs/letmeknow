<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.Application" table="application" schema="letmeknow_test">
        <id name="applicationId">
            <column name="application_id" sql-type="int(11)"/>
        </id>
        <property name="applierId">
            <column name="applier_id" sql-type="int(11)"/>
        </property>
        <property name="verifierId">
            <column name="verifier_id" sql-type="int(11)" />
        </property>
        <property name="content">
            <column name="content" sql-type="varchar(45)" length="45" />
        </property>
        <property name="groupId">
            <column name="group_id" sql-type="int(11)"/>
        </property>
        <property name="result">
            <column name="result" sql-type="int(11)" />
        </property>
        <property name="category">
            <column name="category" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>