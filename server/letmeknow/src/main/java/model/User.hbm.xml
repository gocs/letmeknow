<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.User" table="user" schema="letmeknow_test">
        <id name="userId">
            <column name="user_id" sql-type="int(11)"/>
        </id>
        <property name="username">
            <column name="username" sql-type="varchar(255)"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(255)"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="phoneNum">
            <column name="phone_num" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="isAdmin">
            <column name="is_admin" sql-type="int(11)"/>
        </property>
        <property name="status">
            <column name="status" sql-type="int(11)"/>
        </property>
        <property name="createdAt">
            <column name="created_at" sql-type="datetime" not-null="true"/>
        </property>
        <property name="updatedAt">
            <column name="updated_at" sql-type="datetime" not-null="true"/>
        </property>
        <property name="deletedAt">
            <column name="deleted_at" sql-type="datetime" not-null="true"/>
        </property>
        <property name="avatar">
            <column name="avatar" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="installationId">
            <column name="installation_id" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>