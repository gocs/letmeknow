<controls:MetroWindow x:Class="letmeknow_admin.MainWindow"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:letmeknow_admin"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Letmeknow - 管理主页" Height="360" Width="640" MinWidth="640" MinHeight="360" MaxWidth="640" MaxHeight="360" ShowMaxRestoreButton="False">
    <Grid>
        <controls:Tile x:Name="tileChangePassword" Title="密码更改" 
                    TiltFactor="2"
                    Width="100" Height="100" 
                    Margin="10,114,522,115" Click="tileChangePassword_Click">
            <iconPacks:PackIconFontAwesome Width="30"
                                           Height="30"
                                           Kind="key" />
        </controls:Tile>
        <controls:Tile x:Name="tileVerify" Title="申请审核" 
        	TiltFactor="2"
        	Width="100" Height="100" 
        	Margin="417,10,115,219">
            <iconPacks:PackIconFontAwesome Width="30"
                                           Height="30"
                                           Kind="IdCard" />
        </controls:Tile>
        <controls:Tile x:Name="tileUser" Title="用户管理" 
        	TiltFactor="2"
        	Width="100" Height="100" 
        	Margin="417,220,115,9" Click="tileUser_Click">
            <iconPacks:PackIconFontAwesome Width="30"
                                           Height="30"
                                           Kind="User" />
        </controls:Tile>
        <controls:Tile x:Name="tileGroup" Title="通知组管理" 
        	TiltFactor="2"
        	Width="100" Height="100" 
        	Margin="522,220,10,9">
            <iconPacks:PackIconFontAwesome Width="30"
                                           Height="30"
                                           Kind="Users" />
        </controls:Tile>
        <controls:Tile x:Name="tileViewMessage" Title="查看私信" 
        	TiltFactor="2"
        	Width="100" Height="100" 
        	Margin="417,115,115,114">
            <iconPacks:PackIconFontAwesome Width="30"
        		Height="30"
        		Kind="EnvelopeOutlinepenOutline" />
        </controls:Tile>
        <controls:Tile x:Name="tileSendMessage" Title="发送系统消息" 
        	TiltFactor="2"
        	Width="100" Height="100" 
        	Margin="522,115,10,114"
            TitleFontSize="14">
            <iconPacks:PackIconFontAwesome 
                                           Width="30"
                                           Height="30"
                                           Kind="EnvelopeOutline" />
        </controls:Tile>
        <Label x:Name="title" Content="欢迎使用，Admin" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="32"/>
        <controls:Tile x:Name="tileExit" Title="退出" 
        	TiltFactor="2"
        	Width="100" Height="100" 
        	Margin="10,220,522,9" Click="tileExit_Click">
            <iconPacks:PackIconMaterial Width="30"
        		Height="30"
        		Kind="Logout" />
        </controls:Tile>
        <controls:Tile x:Name="tileHandleReport" Title="举报处理" 
        	TiltFactor="2"
        	Width="100" Height="100" 
        	Margin="522,10,10,219">
            <iconPacks:PackIconFontAwesome Width="30"
        		Height="30"
        		Kind="Exclamation" />
        </controls:Tile>
        <controls:Tile x:Name="tileNotification" Title="通知管理" 
        	TiltFactor="2"
        	Width="100" Height="100" 
        	Margin="312,220,220,9" Click="tileNotification_Click">
            <iconPacks:PackIconModern Width="30"
        		Height="30"
        		Kind="Notification" />
        </controls:Tile>
    </Grid>
</controls:MetroWindow>
